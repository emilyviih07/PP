                if (username === usuarioValido && password === senhaValida) {
                   
                    window.location.href = 'index.html'; 
                } else {
                
                    errorMessage.textContent = "Usuário ou senha incorretos. Tente novamente.";
                }
            } else {
                
                errorMessage.textContent = "Por favor, preencha ambos os campos.";
            }
        }
    </script>
</body>
</html>
